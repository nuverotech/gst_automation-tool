{
  "version": 1,
  "disable_existing_loggers": false,

  "formatters": {
    "json": {
      "class": "pythonjsonlogger.jsonlogger.JsonFormatter",
      "format": "%(asctime)s %(levelname)s %(name)s %(message)s"
    }
  },

  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "json",
      "stream": "ext://sys.stdout",
      "level": "INFO"
    },
    "file": {
      "class": "logging.FileHandler",
      "formatter": "json",
      "filename": "app.log",
      "level": "INFO"
    }
  },

  "loggers": {
    "uvicorn": {
      "handlers": ["console", "file"],
      "level": "WARNING",
      "propagate": false
    },
    "uvicorn.error": {
      "handlers": ["console", "file"],
      "level": "ERROR",
      "propagate": false
    },
    "uvicorn.access": {
      "handlers": ["console"],
      "level": "WARNING",
      "propagate": false
    },
    "watchfiles": {
      "handlers": ["console"],
      "level": "CRITICAL",
      "propagate": false
    },
    "app": {
      "handlers": ["console", "file"],
      "level": "INFO",
      "propagate": false
    }
  },

  "root": {
    "level": "WARNING",
    "handlers": ["console", "file"]
  }
}
